<div class="header-fields">
    <div class="sheet-header-table">
        <div class="sheet-logo">
            <h2>~ Helv√©czia ~</h2>
        </div>
        <div class="actor-portrait">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        </div>
        <div class="actor-name" style="display: inline-flex;">
            <h3 style="display: contents;"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>,</h3>
        </div>
        <div class="actor-level" style="display: inline-flex;">
            <h3>a {{ordinal data.level }}  level {{data.people}} {{data.class}}</h3>
        </div>
        <div class="actor-exp" style="display: inline-flex;" title="{{ localize 'HV.experience' }}">
            <h3 style="display: contents; width: 40px;">{{ localize 'HV.experience' }}<input name="data.experience" type="text" data-dtype="Number" value="{{data.experience}}"></h3>
        </div>
        <div class="actor-virtue" style="display:flex">
                <div class="virtue-mark"><i class="fas fa-book-dead"></i></div>
                <div class="virtue-balance">
                    <i class="{{balance data.virtue}}" title="{{balanceTip data.virtue}}"></i>
                </div>
                <div class="virtue-mark"><i class="fas fa-book-medical"></i></div>
                <div class="consumable-counter" title="{{localize 'HV.virtue'}}">
            {{#times (reds data.virtue)}}
            <div class="full-mark-red"></div>
            {{/times}} 
            {{#times (subtract 7 (reds data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}

            {{#times (blues data.virtue)}}
            <div class="full-mark-blue"></div>
            {{/times}} 
            {{#times (subtract 7 (blues data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}

            {{#times (greens data.virtue)}}
            <div class="full-mark-green"></div>
            {{/times}} 
            {{#times (subtract 7 (greens data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}
            </div>
        </div>
        <section class="actor-computed">
            <div class="attribute-group flexrow">
                <ol class="attributes">
                    <li class="attribute ability-score actor-ac">
                        <h4 class="attribute-name box-title">
                            <a>{{ localize 'HV.AC' }}:</a>
                        </h4>
                        <div class="attribute-value">
                            <input name="data.ac" type="text" value="{{data.ac}}" data-dtype="Number" />
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-initiative">
                        <h4 class="attribute-name-long box-title">
                            <a>{{ localize 'HV.initiative' }}:</a>
                        </h4>
                        <div class="attribute-value" title="{{ localize 'HV.initiative_bonus'}}">
                            <input name="data.initiative" type="text" data-dtype="Number" value="{{ plusminus data.initiative}}" disabled>
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-virt-val">
                        <h4 class="attribute-name box-title">
                            <a>{{ localize 'HV.virtue' }}:</a>
                        </h4>
                        <div class="attribute-value">
                            <input name="data.virtue" type="text" data-dtype="Number" value="{{data.virtue}}">
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-hp">
                        <h4 class="attribute-name box-title" title="{{ localize 'HV.HP.long' }}" >
                            <a>{{ localize 'HV.HP.short' }}:</a>
                        </h4>
                        <div class="attribute-value">
                            <input name="data.hp.value" type="text" data-dtype="Number" value="{{data.hp.value}}" title="{{ localize 'HV.HP.current' }}">
                            <input name="data.hp.max" type="text" data-dtype="Number" value="({{data.hp.max}})" title="{{ localize 'HV.HP.max' }}" disabled>
                        </div>
                        
                    </li>
                </ol>
            </div>
        </section>
    </div>
</div>