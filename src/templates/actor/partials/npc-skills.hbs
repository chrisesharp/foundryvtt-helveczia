{{!-- skills and abilities --}}
<div class="skills">
    <ol class="item-list">
        <li class="flexrow item-header">
            <h2 class="centred">~ {{ localize 'HV.tabs.skills'}} ~</h2>
            <div class="item-controls">
            <a class="item-control item-create" title="{{localize 'HV.Add'}} {{localize 'HV.tabs.skills'}}" data-type="skill"><i class="fas fa-plus"></i></a>
            </div>
        </li>
    {{#each data.skills as |item id|}}
        <li class="item-entry  {{#if (gt item.system.ability.length 0) }}item-rollable{{/if}} flexcol" data-item-id="{{item.id}}">
            <div class="item flexrow">
                {{#if (gt item.system.ability.length 0) }}
                <div class="item-image rollable" data-roll="skill" data-item-id="{{item.id}}" data-attr="{{item.system.ability}}"><img src="{{item.img}}" width="24" height="24"/></div>
                {{else}}
                <div class="item-image"><img src="{{item.img}}" width="24" height="24"/></div>
                {{/if}}
                <h4 class="item-name">{{item.name}}</h4>
                {{#unless (itemLocked item)}}
                <div class="item-controls">
                    <a class="item-control item-edit" title="{{localize 'HV.Edit'}} {{localize 'HV.tabs.skills'}}"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="{{localize 'HV.Delete'}} {{localize 'HV.tabs.skills'}}"><i class="fas fa-trash"></i></a>
                </div>
                {{else}}
                <div class="item-controls">
                    <i id="padlock" class="fas fa-lock" style="padding-top: 4px;"></i>
                </div>
                {{/unless}}
            </div>
        </li>
    {{/each}}
    </ol>
</div>