<div class="header-fields">
    <div class="sheet-header-table">
        <div class="sheet-logo">
            <h2>~ Helv√©czia ~</h2>
        </div>
        <div class="actor-portrait">
            <img class="profile-img" data-edit="img" data-action="onEditImage" src="{{actor.img}}" title="{{actor.name}}"/>
            <div class="token-sync" data-action="tokenSync" title="Match token with portrait">
                <a><i class="fas fa-sync"></i></a>
            </div>
        </div>
        <div class="actor-name" style="display: inline-flex;">
            <a><i class="fas {{#if (eq sex 'male') }}fa-mars{{else}}fa-venus{{/if}} toggle-gender" data-action="toggleGender" data-actor-id="{{ actor._id}}" title="sex"></i></a>
            <h3 style="display: contents;"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>,</h3>
            <a><i class="fa fa-dice roll-name" data-action="rollName" data-actor-id="{{ actor._id}}"></i></a>
        </div>
        {{#unless no_origins }}
        <div class="actor-class" style="display: inline-flex;">
            <h3>{{ordinal data.level }}  {{localize 'HV.Level.long'}} {{data.people}}
                {{#if fighter_class}}
                    {{#if fighter_specialism }}
                         {{ fighter_specialism }}
                    {{else}}
                     <button style="width: auto;" data-action="chooseSpecialism" data-class="fighter" class="choose-specialism">{{ localize 'HV.Specialism' }}</button>
                    {{/if}}
                {{else}}
                {{data.class}}
                {{/if}}
            </h3>
        </div>
        {{/unless}}
        <div class="actor-exp" style="display: inline-flex;" title="{{ localize 'HV.experience' }}">
            <h3 style="display: contents; width: 40px;">{{ localize 'HV.experience' }}<input name="system.experience" type="text" data-dtype="Number" value="{{data.experience}}"></h3>
        </div>
        {{#if initialized }}
        <div class="actor-virtue" style="display:flex">
                <div class="virtue-mark"><i class="fas fa-book-dead"></i></div>
                <div class="virtue-balance">
                    <i class="{{balance data.virtue}}" title="{{balanceTip data.virtue}}"></i>
                </div>
                <div class="virtue-mark">
                    {{#if hasBible }}
                    <a class="holy-bible"><i class="fas fa-book-medical highlighted" title="Seek Guidance"></i></a>
                    {{else}}
                    <i class="fas fa-book-medical"></i>
                    {{/if}}
                </div>
                <div class="consumable-counter" title="{{localize 'HV.virtue'}}">
            {{#times (reds data.virtue)}}
            <div class="full-mark-red"></div>
            {{/times}} 
            {{#times (subtract 7 (reds data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}

            {{#times (blues data.virtue)}}
            <div class="full-mark-blue"></div>
            {{/times}} 
            {{#times (subtract 7 (blues data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}

            {{#times (greens data.virtue)}}
            <div class="full-mark-green"></div>
            {{/times}} 
            {{#times (subtract 7 (greens data.virtue))}}
            <div class="empty-mark"></div>
            {{/times}}
            </div>
        </div>
        <section class="actor-computed">
            <div class="attribute-group flexrow">
                <ol class="attributes">
                    <li class="attribute ability-score actor-ac">
                        <h4 class="attribute-name box-title">
                            {{ localize 'HV.AC' }}:
                        </h4>
                        <div class="attribute-value">
                            <input name="system.ac" type="text" value="{{data.ac}}" data-dtype="Number" />
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-initiative">
                        <h4 class="attribute-name-long box-title">
                            <a>{{ localize 'HV.initiative' }}:</a>
                        </h4>
                        <div class="attribute-value" title="{{ localize 'HV.initiative_bonus'}}">
                            <input id='init-bonus' name="system.initiative" type="text" data-dtype="Number" value="{{ plusminus data.initiative}}" disabled>
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-virt-val">
                        <h4 class="attribute-name box-title">
                            {{ localize 'HV.virtue' }}:
                        </h4>
                        <div class="attribute-value">
                            <input name="system.virtue" type="text" data-dtype="Number" value="{{data.virtue}}" disabled> <div class="bracket">(</div><input name="system.origVirtue" type="text" data-dtype="Number" value="{{data.origVirtue}}" title="{{ localize 'HV.virtueOrig' }}" {{#unless user.isGM}}disabled{{/unless}}><div class="bracket">)</div>
                        </div>
                    </li>
                </ol>
                <ol class="attributes">
                    <li class="attribute ability-score actor-hp">
                        <h4 class="attribute-name box-title">
                            {{ localize 'HV.HP.abbr' }}:
                        </h4>
                        <div class="attribute-value">
                            <input name="system.hp.value" type="text" data-dtype="Number" value="{{data.hp.value}}" title="{{ localize 'HV.HP.current' }}">
                            <div class="bracket">(</div>
                            <input name="system.hp.max" type="text" data-dtype="Number" value="{{data.hp.max}}" title="{{ localize 'HV.HP.max' }}" {{#unless user.isGM}}disabled{{/unless}}>
                            <div class="bracket">)</div>
                        </div>
                        <img src="{{die data.hp.hd}}" class="hitdie {{#if needToRoll}}blinking{{/if}}" data-action="rollHitDie" data-roll="{{data.hp.hd}}" data-label="HD">
                    </li>
                </ol>
            </div>
        </section>
        {{else}}
        <section class="chargen">
            {{#unless no_abilities }}
                {{#if no_origins }}
                <button class="choose-race-class" data-action="chooseRaceClass"><i class="fa fa-dice"></i>{{ localize 'HV.ChooseOriginClass' }}</button>
                {{/if}}
            {{/unless}}
        </section>
        {{/if}}
    </div>
</div>