{{!-- expertise and abilities --}}
<ol class="item-list effects-list">
    {{#each effects as |section sid|}}
        <li class="items-header flexrow" data-effect-type="{{section.type}}">
        <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
        <div class="effect-source">{{ localize 'HV.effect.Source' }}</div>
        <div class="effect-source">{{ localize 'HV.effect.Duration' }}</div>
        <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="create" title="{{localize 'HV.effect.Create'}}">
            <i class="fas fa-plus"></i> {{localize "HV.Add"}}
            </a>
        </div>
        </li>

        <ol class="item-list">
        {{#each section.effects as |effect|}}
        <li class="item-entry flexcol" data-effect-id="{{effect.id}}">
            <div class="item effect flexrow">
                <h4 class="item-name effect-name">{{effect.name}}</h4>
                <div class="effect-source">{{effect.sourceName}}</div>
                <div class="effect-duration">{{#if effect.duration.duration }}{{effect.duration.label}}{{/if}}</div>
                <div class="item-controls effect-controls flexrow">
                    <a class="effect-control" data-action="toggle" title="{{localize 'HV.effect.Toggle'}}">
                        <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                    </a>
                    <a class="effect-control" data-action="edit" title="{{localize 'HV.effect.Edit'}}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="effect-control" data-action="delete" title="{{localize 'HV.effect.Delete'}}">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        </li>
        {{/each}}
    </ol>
    {{/each}}
</ol>