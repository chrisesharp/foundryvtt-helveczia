<section
  class='sheet-body tab spells flexcol {{tab.cssClass}}'
  data-group='primary'
  data-tab='spells'
>
  <ol class="item-list">
    <li class="flexrow item-header">
      <div class="flex3 centred">
        <h2 class="flexrow"> ~ {{ localize 'HV.Spells' }} ~</h2>
      </div>
    </li>
  </ol>
  <div class="spell-list flexrow">
      <ol class="item-list">
        {{#each spells as |item|}}
        <li class="item-entry flexcol" data-item-id="{{item.id}}">
          <div class="item flexrow" data-action="itemSummary" data-item-id="{{item.id}}">
            <div> {{{ item.link }}} </div>
            <div class="item-controls">
                  <a class="item-control item-delete" data-action="itemDelete" title="{{localize 'HV.Delete'}} {{localize 'HV.items.possessions'}}"><i class="fas fa-trash"></i></a>
            </div>
          </div>
        </li>
        {{/each}}
      </ol>
  </div>
</section>
