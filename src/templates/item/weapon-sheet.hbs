<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
      <div class="flexcol" style="justify-content: center;align-items: center;">
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
      </div>
      <div class="header-fields">
          <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
          <div class="form-group">
            <h2 class="cost">Cost: </h2>
            <input name="data.cost.value" type="text" value="{{data.cost.value}}">
            <select name="data.cost.coin" type="text">
             {{selectOptions coins selected=data.cost.coin}}
            </select>
          </div>
      </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item" data-tab="damage">{{ localize 'HV.tabs.damage'}}</a>
      {{> "systems/helveczia/templates/item/partials/item-nav.hbs"}}
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
      <div class="tab damage" data-group="primary" data-tab="damage">
        <h3>Damage: <input name="data.damage" type="text" value="{{data.damage}}" placeholder="1d3"/></h3>
        <h3>Critical on:<input name="data.critical.range" type="text" value="{{data.critical.range}}"/></h3>
        <h3>Damage multiplier:<input name="data.critical.multiple" type="text" value="{{data.critical.multiple}}"/></h3>
      </div>
      {{#if config.showEffects}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "systems/helveczia/templates/item/partials/item-effects.hbs"}}
        </div>
      {{/if }}
      {{!-- Description Tab --}}
      <div class="tab editor " data-group="primary" data-tab="editor">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
      </div>
    </section>
</form>
