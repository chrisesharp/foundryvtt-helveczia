<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
      <div class="flexcol" style="justify-content: center;align-items: center;">
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
      </div>
      <div class="header-fields">
          <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
          <div class="form-group">
            <h2 class="cost">Cost: </h2>
            {{#if isGM }}
              <input name="data.cost.value" type="text" value="{{data.cost.value}}">
              <select name="data.cost.coin" type="text">
              {{selectOptions coins selected=data.cost.coin}}
              </select>
              <div class="actor-exp" style="display: inline-flex;" title="{{ localize 'HV.AC' }}">
              <h3 style="display: contents; width: 40px;">{{ localize 'HV.AC' }}<input name="data.bonus" type="text" data-dtype="Number" value="{{ plusminus data.bonus}}"></h3>
              </div>
              <div class="actor-exp" style="display: inline-flex;" title="{{ localize 'HV.Encumbrance' }}">
              <h3 style="display: contents; width: 40px;">{{ localize 'HV.Encumbrance' }}<input name="data.encumbrance" type="text" data-dtype="Number" value="{{ data.encumbrance}}"></h3>
              </div>
            {{else}}
              <h3>{{ data.cost.value }} {{ data.cost.coin }}</h3>
              <div style="display: inline-flex;" title="{{ localize 'HV.AC' }}">
              <h3>{{ localize 'HV.AC' }}: {{ plusminus data.bonus }}</h3>
              </div>
              <div style="display: inline-flex;" title="{{ localize 'HV.Encumbrance' }}">
              <h3>{{ localize 'HV.Encumbrance' }}: {{ data.encumbrance }}</h3>
              </div>
            {{/if}}
          </div>
      </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
       {{> "systems/helveczia/templates/item/partials/item-nav.hbs"}}
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
      {{#if config.showEffects}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "systems/helveczia/templates/item/partials/item-effects.hbs"}}
        </div>
      {{/if }}
      {{!-- Description Tab --}}
      <div class="tab editor " data-group="primary" data-tab="editor">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
      </div>
    </section>
</form>
