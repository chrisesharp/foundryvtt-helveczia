{{!-- expertise and abilities --}}
<ol class="item-list effects-list">
    {{#each effects as |section sid|}}
        {{#unless (eq section.label "Temporary")}}
        <li class="items-header flexrow" data-effect-type="{{section.type}}">
        <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
        <div class="effect-source">Source</div>
        <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="create" title="{{localize 'HV.EffectCreate'}}">
            <i class="fas fa-plus"></i>
            </a>
        </div>
        </li>

        <ol class="item-list">
        {{#each section.effects as |effect|}}
        <li class="item effect flexrow" data-effect-id="{{effect.id}}">
            <div class="item-name effect-name flexrow">
                <h4>{{effect.label}}</h4>
                </div>
                <div class="effect-source">{{effect.sourceName}}</div>
                <div class="item-controls effect-controls flexrow">
                <a class="effect-control" data-action="toggle" title="{{localize 'HV.EffectToggle'}}">
                    <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                </a>
                <a class="effect-control" data-action="edit" title="{{localize 'HV.EffectEdit'}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="effect-control" data-action="delete" title="{{localize 'HV.EffectDelete'}}">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </li>
        {{/each}}
        {{/unless}}
    </ol>
    {{/each}}
</ol>