<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
      <div class="flexrow" style="justify-content: center;align-items: center;">
        <img class="item-img flex1" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
         <h1 class="charname flex3"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      </div>
    </header>
    <header class="sheet-header">
    <div class="header-fields">
          <h4 class="specialism flexrow">Specialism:<input id="specialism" name="data.specialism" type="checkbox" {{ isChecked data.specialism}}/>
          <select id="parent" name="data.parent" {{#unless data.specialism }}style="display: none;"{{/unless}}>
            {{selectOptions classes selected=data.parent}}
          </select>
          </h4>
      </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{> "systems/helveczia/templates/item/partials/item-nav.hbs"}}
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
      {{#if config.showEffects}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "systems/helveczia/templates/item/partials/item-effects.hbs"}}
        </div>
      {{/if }}
      {{!-- Description Tab --}}
      <div class="tab editor " data-group="primary" data-tab="editor">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
      </div>
    </section>
</form>
