<section class="helveczia chat-card">
    <div class="helveczia chat-block">
        <div class="flexrow chat-header">
            <div class="chat-title"><h2>{{ localize 'HV.deeds.absolution'}}</h2></div>
            <div class="chat-img" style="background-image:url('{{actor.img}}')"></div>
        </div>
        <div>
        {{#if success}}
        <h3>{{ localize 'HV.messages.absolution' }}</h3>
        <ol>
        {{#each absolved as |sin|}}
            <li>{{ deedLocalize  (lookup ../cardinalSins sin.system.cardinality) }} ~ {{sin.name}}</li>
        {{/each}}
        </ol>
        {{else}}
        <h3>{{ localize 'HV.messages.noAbsolution' }}</h3>
        {{/if}}
        </div>
    </div>
</section>